# Gin settings
GIN_MODE=debug # Use 'debug' for development, 'release' for production
PORT=8080

# App settings
VERSION=1 # Developing
MACHINE_ID=1
BACKEND_URL=http://localhost:8080/
FRONTEND_URL=http://localhost:8080/

# Database settings
DATABASE_TYPE=postgres # Options: postgres, mysql, mariadb, sqlite
# PostgreSQL settings
DATABASE_HOST=postgres # Use 'postgres' for Docker, '127.0.0.1' for local development
DATABASE_USER=gin-template
DATABASE_PASSWORD=xxxxxxxxxx
DATABASE_DBNAME=gin-template
DATABASE_PORT=5432
DATABASE_SSLMODE=disable # Use 'disable' for development, 'require' for production

# Connection pool settings
DATABASE_MAX_IDLE_CONNS=10
DATABASE_MAX_OPEN_CONNS=100
DATABASE_CONN_MAX_LIFETIME=30

# Argon2 settings (for password hashing)
ARGON2_MEMORY=65536 # 64KB memory (64*1024)
ARGON2_ITERATIONS=20
ARGON2_PARALLELISM=4

# Cookie settings
JWT_SECRET_KEY=change_me_in_production # Important: Use a strong random string in production
COOKIE_DOMAIN=localhost
COOKIE_PATH=/
COOKIE_REFRESH_TOKEN_EXPIRES=60 #days
COOKIE_ACCESS_TOKEN_EXPIRES=15 #minutes